{
    "version": 2,
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": "nodejs",
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "env": {
        "DATABASE_URL": {
            "description": "Database connection URL"
        },
        "API_KEY": {
            "description": "API key for authentication"
        },
        "NODE_ENV": {
            "description": "Node environment"
        }
    },
    "git": {
        "deploymentEnabled": {
            "main": true
        }
    }
}